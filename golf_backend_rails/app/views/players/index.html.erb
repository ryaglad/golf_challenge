<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Round</th>
      <th>Name</th>
      <th>Hole 1</th>
      <th>Hole 2</th>
      <th>Hole 3</th>
      <th>Hole 4</th>
      <th>Hole 5</th>
      <th>Hole 6</th>
      <th>Hole 7</th>
      <th>Hole 8</th>
      <th>Hole 9</th>
      <th>Out</th>
      <th>Hole 10</th>
      <th>Hole 11</th>
      <th>Hole 12</th>
      <th>Hole 13</th>
      <th>Hole 14</th>
      <th>Hole 15</th>
      <th>Hole 16</th>
      <th>Hole 17</th>
      <th>Hole 18</th>
      <th>In</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.round_id %></td>
        <td><%= player.name %></td>
        <td><%= player.hole_1 %></td>
        <td><%= player.hole_2 %></td>
        <td><%= player.hole_3 %></td>
        <td><%= player.hole_4 %></td>
        <td><%= player.hole_5 %></td>
        <td><%= player.hole_6 %></td>
        <td><%= player.hole_7 %></td>
        <td><%= player.hole_8 %></td>
        <td><%= player.hole_9 %></td>
        <td><%= player.out %></td>
        <td><%= player.hole_10 %></td>
        <td><%= player.hole_11 %></td>
        <td><%= player.hole_12 %></td>
        <td><%= player.hole_13 %></td>
        <td><%= player.hole_14 %></td>
        <td><%= player.hole_15 %></td>
        <td><%= player.hole_16 %></td>
        <td><%= player.hole_17 %></td>
        <td><%= player.hole_18 %></td>
        <td><%= player.in %></td>
        <td><%= player.total %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

